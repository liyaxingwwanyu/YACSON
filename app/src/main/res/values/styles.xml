<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/ic_launcher22</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Black_bg" parent="android:style/Theme.Black.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.AppStartLoad" parent="android:Theme">
        <item name="android:windowBackground">@drawable/ic_launcher22</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 新的登录注册系统 -->
    <style name="MyDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Inmobi游戏推荐开关 -->
    <style name="inmobi_recommend_app_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_launcher22
        </item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <!-- main -->
    <style name="UpdateActivityDialogStyle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- title2 子标题 -->
    <style name="title2Style">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- button风格 -->
    <style name="buttonFont">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- title风格 -->
    <style name="titleStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_logout" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ic_launcher22</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 新的版本更新 -->
    <style name="MyDialogVer">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="personal_center_modify_password_dialog_item_style">
        <item name="android:windowBackground">@color/transparent_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <!-- 发布竞猜CheckBox选中未选中 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_launcher22</item>
    </style>
    <style name="Mini_Site_CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_launcher22</item>
    </style>

</resources>