<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/wf_item_for_list_type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_item_selected"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wf_item_for_list_group_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/wf_item_for_list_group_one_iv"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/wf_item_for_list_group_two_iv"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/wf_item_for_list_group_three_iv"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/wf_item_for_list_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black_opaque_thirteen"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/zuoyoo_wf_recycerview_item_abstracts_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/zuoyoo_wf_recycerview_item_abstracts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/test_text"
                android:textColor="@color/black_fifty_four"
                android:textSize="14dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zuoyoo_wf_recycerview_item_video_icon_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/zuoyoo_wf_recycerview_item_video_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/zuoyoo_wf_recycerview_item_publication_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:singleLine="true"
                    android:text="@string/test_text"
                    android:textColor="@color/black_fifty_four"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/wf_item_for_list_type_iv"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

</RelativeLayout>
