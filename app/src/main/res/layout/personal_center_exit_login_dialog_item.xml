<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/ic_launcher22"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personal_center_exit_login_dialog_item_title_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/personal_center_exit_login_dialog_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:textColor="#212121"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bdbdbd"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_center_exit_login_dialog_item_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="18dp"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <LinearLayout
                android:id="@+id/personal_center_exit_login_dialog_item_cancel_complete_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personal_center_exit_login_dialog_item_cancel_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="#007aff"
                    android:textSize="18dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/personal_center_exit_login_dialog_item_complete_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="#007aff"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>