<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/personal_collection_title_bar_back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/login_register_title_bar_back_bg_selector" />


        <TextView
            android:id="@+id/personal_center_title_bar_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/collect_list"
            android:textColor="#212121"
            android:textSize="20dp" />

        <Button
            android:id="@+id/personal_center_title_bar_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/radio_blue"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_unselected" />

</LinearLayout>