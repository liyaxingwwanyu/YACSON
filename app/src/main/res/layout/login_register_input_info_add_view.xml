<CustomView.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/login_register_input_msg_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/login_register_mail_input_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/login_register_mail_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/login_register_mail_input_iv"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="@string/input_email_accounts"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_A3"
                    android:textCursorDrawable="@null"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/login_register_mail_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher22" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/login_register_mail_input_iv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3dp"
            android:background="@color/gray_A3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/login_register_password_input_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/login_register_password_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/login_register_password_input_iv"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_A3"
                    android:textCursorDrawable="@null"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/login_register_password_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher22" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/login_register_password_input_iv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3dp"
            android:background="@color/gray_A3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/login_register_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_A3"
                android:gravity="center"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/login_register_login_btn_wait_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_register_login_btn_wait_iv"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>


</CustomView.MyRelativeLayout>